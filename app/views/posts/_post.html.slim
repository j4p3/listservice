-full ||= false
-link ||= false
-share ||= false

-if link
  =link_to post_path(post), class: 'post' do
    div
      h2.subject= post.subject
      .author= post.author
      .date= post.date.strftime("%m/%d/%Y")
      -if full
        p.body= simple_format(post.body)
      -else
        p.body= truncate(post.body, length: 360)
-else
  div.post
    h1.subject= post.subject
    .info
      .author= post.author
      .date= post.date.strftime("%m/%d/%Y")
    -if share
      = render_shareable static_link: true, turbolinks: true, buttons: ['reddit', 'twitter', 'tumblr', 'facebook']
    -if full
      p.body= simple_format(post.body)
    -else
      p.body= truncate(post.body, length: 360)